<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_enabled="false">
		<layer-list>
			<item>
				<shape 
					xmlns:android="http://schemas.android.com/apk/res/android"
					android:shape="rectangle">
					<corners 
						android:radius="4dp" />
				  	<solid 
						android:color="@color/custom_theme_button_disabled" />
				  	<padding 
				  	    android:left="@dimen/custom_theme_button_padding"
				  	    android:top="@dimen/custom_theme_button_padding"
				  	    android:right="@dimen/custom_theme_button_padding"
				  	    android:bottom="@dimen/custom_theme_button_padding" />
					<stroke 
						android:width="1dp" 
						android:color="@color/custom_theme_button_disabled_strock"/>
    			</shape>
			</item>
		</layer-list>
	</item>
    <item android:state_pressed="true">
		<layer-list>
			<item>
				<shape 
					xmlns:android="http://schemas.android.com/apk/res/android"
					android:shape="rectangle">
					<corners 
						android:radius="4dp" />
				  	<gradient 
						android:angle="270"
						android:startColor="@color/custom_theme_button2" 
						android:endColor="@color/custom_theme_button1"
						android:type="linear" />
				  	<padding 
				  	    android:left="@dimen/custom_theme_button_padding"
				  	    android:top="@dimen/custom_theme_button_padding"
				  	    android:right="@dimen/custom_theme_button_padding"
				  	    android:bottom="@dimen/custom_theme_button_padding" />
					<stroke 
						android:width="1dp" 
						android:color="@color/custom_theme_text"/>
    			</shape>
			</item>
		</layer-list>
	</item>
	<item android:state_pressed="false" android:state_focused="true">
		<layer-list>
			<item>
				<shape 
					xmlns:android="http://schemas.android.com/apk/res/android"
					android:shape="rectangle">
					<corners 
						android:radius="4dp" />
				  	<gradient 
						android:angle="270"
						android:startColor="@color/custom_theme_button_focused1" 
						android:endColor="@color/custom_theme_button_focused2"
						android:type="linear" />
				  	<padding 
				  	    android:left="@dimen/custom_theme_button_padding"
				  	    android:top="@dimen/custom_theme_button_padding"
				  	    android:right="@dimen/custom_theme_button_padding"
				  	    android:bottom="@dimen/custom_theme_button_padding" />
					<stroke 
						android:width="1dp" 
						android:color="@color/custom_theme_text"/>
    			</shape>
			</item>
		</layer-list>
	</item>
	<item>
		<layer-list>
			<item>
				<shape 
					xmlns:android="http://schemas.android.com/apk/res/android"
					android:shape="rectangle">
					<corners 
						android:radius="4dp" />
				  	<gradient 
						android:angle="270"
						android:startColor="@color/custom_theme_button1" 
						android:endColor="@color/custom_theme_button2"
						android:type="linear" />
				  	<padding 
				  	    android:left="@dimen/custom_theme_button_padding"
				  	    android:top="@dimen/custom_theme_button_padding"
				  	    android:right="@dimen/custom_theme_button_padding"
				  	    android:bottom="@dimen/custom_theme_button_padding" />
					<stroke 
						android:width="1dp" 
						android:color="@color/custom_theme_text"/>
    			</shape>
			</item>
		</layer-list>
	</item>
</selector>
